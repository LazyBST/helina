{
  "name": "@original4sure/cb-helina",
  "version": "0.2.0",
  "description": "ChannelBlu boilerplate for NestJS",
  "author": "O4S",
  "private": false,
  "license": "MIT",
  "main": "dist/libs/src/index",
  "types": "dist/libs/src/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "url": "git@github.com:original4sure/cb-helina.git"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
    "start:dev": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "knex": "knex --knexfile knexfile.ts",
    "migrate:up": "npm run knex migrate:latest",
    "migrate:down": "npm run knex migrate:rollback",
    "migrate:make": "npm run knex migrate:make -- -x ts",
    "migrate:list": "npm run knex migrate:list",
    "seed:run": "npm run knex seed:run",
    "seed:make": "npm run knex seed:make -- -x ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.236.0",
    "@aws-sdk/s3-request-presigner": "^3.236.0",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/platform-fastify": "^9.3.10",
    "@opentelemetry/auto-instrumentations-node": "^0.36.4",
    "@opentelemetry/exporter-trace-otlp-grpc": "^0.36.0",
    "@opentelemetry/sdk-node": "~0.35.0",
    "@opentelemetry/sdk-trace-base": "^1.10.0",
    "@prisma/client": "^4.5.0",
    "async-retry": "^1.3.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.1",
    "colors": "^1.4.0",
    "express-rate-limit": "^6.4.0",
    "helmet": "^5.1.0",
    "ioredis": "^5.2.4",
    "kafkajs": "^2.2.2",
    "moment": "^2.29.1",
    "pg": "^8.7.3",
    "query-string": "^7.0.1",
    "ramda": "^0.28.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.4.0",
    "typeorm": "^0.3.12",
    "uuid": "^8.3.2",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@nestjs/schematics": "^9.0.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.6",
    "@types/lodash": "^4.14.176",
    "@types/node": "^18.0.5",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6",
    "ts-jest": "^28.0.7",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.4.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@libs/(.*)": "<rootDir>/libs/src/$1",
      "@libs": "<rootDir>/libs/src"
    }
  }
}
